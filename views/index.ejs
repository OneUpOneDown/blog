<%- include header %>
<div class="container-fluid">
    <div style="padding-left:10px;">
        <% posts.forEach(function (post, index) { %>
        <div class="panel panel-default">
            <div class="panel-heading">
                <p>
                    <h2 style="border-left: 5px solid #ff7300;padding-left: 20px;">
                        <a href="u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a>
                    </h2>
                </p>
                <p class="info">
                   作者：<a href="u/<%= post.name %>"><%= post.name %></a> |
                   日期：<%= post.time.minute %>
                </p>
            </div>
            <div class="panel-body">
                <div style="max-height: 232px; overflow: hidden; display: block;">
                    <p>
                   <%- post.post %>
                   </p>
                </div>
                <a class="read-all edit" href="u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">阅读全文</a>
            </div>
        </div>
        <% }) %>
    </div>
</div>
<%- include footer %>
