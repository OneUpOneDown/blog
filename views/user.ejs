<%- include header %>
<div class="container-fluid">
    <h2 style="border-bottom: 5px solid #ff7300;padding-bottom: 20px;"><%= posts[0].name %><small>&nbsp;(共<%= posts.length %>篇)</small></h2>
    <div style="padding-left:10px;">
        <% posts.forEach(function (post, index) { %>
        <div class="panel panel-default">
            <div class="panel-heading">
                <p>
                    <h2 style="border-left: 5px solid #ff7300;padding-left: 20px;">
                        <a href="/u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>"><%= post.title %></a>
                    </h2>
                </p>
                <p class="info">
                    <a href="/u/<%= post.name %>"><img src="<%= post.head %>" /></a>
                    作者：<a href="/u/<%= post.name %>"><%= post.name %></a> |
                    日期：<%= post.time.minute %>
                    <br />
                    <br />

                    标签：
                    <% post.tags.forEach(function (tag, index) { %>
                    <% if (tag) { %>
                    <a class="tag" href="/tags/<%= tag %>"><%= tag %></a>
                    <% } %>
                    <% }) %>
                </p>
            </div>
            <div class="panel-body">
                <p style="max-height: 217px; overflow: hidden; display: block;">
                    <%- post.post %>
                </p>
                <p class="info">阅读：<%= post.pv %> | 评论：<%= post.comments.length %></p>
                <a href="u/<%= post.name %>/<%= post.time.day %>/<%= post.title %>">阅读全文</a>
            </div>
        </div>
        <% }) %>
    </div>
</div>
<%- include paging %>
<%- include footer %>
